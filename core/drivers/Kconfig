menu "Drivers"

config DEV_UART
       tristate "Enable UART driver"
       depends on AARCH64 || x86
       default y

config DEV_VGA
       bool "Enable VGA driver"
       depends on x86
       default y
       
config EARLY_OUTPUT
       bool "Enable early output"
       depends on (DEV_UART&&(AARCH64))||(x86&&(DEV_UART||DEV_VGA))
       default n

config EARLY_CPU_MHZ
       int "CPU frequency (MHz)"
       depends on EARLY_OUTPUT&&(AARCH64)
       default 45

config EARLY_UART_BAUDRATE
       int "Early UART baudrate"
       depends on EARLY_OUTPUT&&(AARCH64)
       default 115200

choice
        prompt "Select early UART port"
        default EARLY_UART1
        depends on EARLY_OUTPUT&&(AARCH64)

config EARLY_UART1
       bool "UART1"

config EARLY_UART2
       bool "UART2"

endchoice


config DEV_NO_UARTS
       int
       default "2"
       depends on DEV_UART

choice
       prompt "Select early output device"
       default EARLY_DEV_UART
       depends on EARLY_OUTPUT && (x86||AARCH64)
       
config EARLY_DEV_UART
       bool "UART"
       depends on DEV_UART
       
config EARLY_DEV_VGA
       bool "VGA"
       depends on DEV_VGA
endchoice

config DEV_MEMBLOCK
       tristate "Enable memory block driver"
       default y
endmenu
